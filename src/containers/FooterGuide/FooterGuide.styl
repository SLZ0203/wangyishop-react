@import "../../assets/stylus/mixins.styl"
.footer_guide
  width 100%
  background #fafafa
  position fixed
  bottom 0
  display flex
  padding 10px 0
  div
    width 20%
    height 100%
    display flex
    flex-direction column
    &.on
      .guide_item
        color $red
    .guide_item
      text-align: center
      width 100%
      display flex
      flex-direction column
      color #666666
      font-size 28px
      .iconfont
        font-size 40px