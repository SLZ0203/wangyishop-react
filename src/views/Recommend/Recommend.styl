@import "../../assets/stylus/mixins.styl"
.recoWrap
  width 100%
  height 1150px
  z-index -1
  margin-top 90px
  .papaWrap
    width 100%
    .bannerWarp
      width 100%
      height 432px
      box-sizing border-box
      padding 24px 0
      background #fff
      .swiper-container
        overflow visibility !important
        img
          width 100%
    .article
      background #fff
      width 100%
      height 286px
      padding 30px
      box-sizing border-box
      margin-bottom 20px
      display flex
      .list
        display flex
        li
          width 164px
          height 220px
          margin-right 24px
          text-align: center
          font-size 24px
          position relative
          img
            width 100%
            margin-bottom 20px
          .number
            font-size 24px
            color: #fff
            background-color: rgba(0, 0, 0, 0.2)
            position absolute
            right 0
            top 0