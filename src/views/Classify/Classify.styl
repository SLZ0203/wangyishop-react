@import "../../assets/stylus/mixins.styl"
.classWrap
  width 100%
  height 1156px
  .search
    position fixed
    left 0
    top 0
    z-index 5
    width 100%
    height 88px
    background #fff
    box-sizing border-box
    padding 0 30px
    .text
      width 100%
      height 60px
      line-height 60px
      background #eee
      border-radius 12px
      margin-top 16px
      text-align: center
      font-size 28px
      color #7e8c8d
      .iconfont
        font-size 32px
  .navWrap
    width 160px
    height 1160px
    margin-top 90px
    background #fff
    position fixed
    top 0
    left 0
    margin-right 2px
    .list
      width 100%
      padding-top 34px
      li
        width 100%;
        height 50px
        line-height 50px
        font-size 26px
        text-align center
        border none
        margin-bottom 60px
        &.on
          border-left 4px solid $red
          color $red
  .scrollWrap
    height 100%
    width 586px
    margin 90px 0 0 164px
    box-sizing border-box
    background #fff
    padding 30px 30px 20px 30px