@import "../../assets/stylus/mixins.styl"
.cartWrap
  height 100%
  width 100%
  .cartHeader
    display flex
    background #fff
    line-height 88px
    padding 0 30px
    text-align: center
    span
      font-size 36px
      margin-left 313px
    a
      margin-left 200px
      font-size 28px
      color $red
  .shopPromise
    width 100%
    font-size 24px
    ul
      padding 0 20px
      clearFix()
      li
        float left
        width 33%
        line-height 70px
        color #666
        text-align: center
        .iconfont
          margin-right -10px
          font-size 32px
  .cartList
    width 100%
    height 1060px
    position relative
    .cartImg
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      margin auto
      width 260px
      height 260px
    .noCart
      width 100%
      text-align: center
      position: absolute
      top 630px
      p
        color: #999
        font-size 28px
        margin-bottom 40px
      .login
        width 480px
        height 92px
        background $red
        border 0
        font-size 28px
        color #fff